<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:paddingStart="30dp"
    android:paddingEnd="30dp">

    <EditText
        android:id="@+id/edit_text_email_sign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/login_email_address"
        android:inputType="textEmailAddress"
        android:textColor="@color/textColor"
        android:layout_marginTop="10dp"
        tools:ignore="Autofill" />

    <EditText
        android:id="@+id/edit_text_first_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/textColor"
        android:hint="@string/sign_up_first_name"
        android:inputType="textCapSentences"
        android:layout_marginTop="10dp"
        tools:ignore="Autofill" />

    <EditText
        android:id="@+id/edit_text_surname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/textColor"
        android:inputType="textCapSentences"
        android:hint="@string/sign_up_surname"
        android:layout_marginTop="10dp"
        tools:ignore="Autofill" />

    <AutoCompleteTextView
        android:id="@+id/auto_complete_text_home_country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/textColor"
        android:hint="@string/sign_up_home_country"
        android:layout_marginTop="10dp"
        android:completionThreshold="1" />

    <EditText
        android:id="@+id/edit_text_home_town"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textCapSentences"
        android:textColor="@color/textColor"
        android:hint="@string/sign_up_home_town"
        android:layout_marginTop="10dp"
        tools:ignore="Autofill" />

    <EditText
        android:id="@+id/edit_text_password_sign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/textColor"
        android:hint="@string/login_password"
        android:inputType="textPassword"
        tools:ignore="Autofill" />

    <EditText
        android:id="@+id/edit_text_password_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="@string/sign_up_confirm_password"
        android:inputType="textPassword"
        tools:ignore="Autofill" />

    <Button
        android:id="@+id/button_next_step"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/sign_up_next_step"
        android:textColor="@color/textColor"
        android:background="@drawable/button"
        android:fontFamily="@font/nunito_bold"/>

</LinearLayout>