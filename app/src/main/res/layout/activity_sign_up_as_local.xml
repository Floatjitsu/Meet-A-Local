<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorPrimary">

    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".local.activity.SignUpAsLocalActivity">

        <TextView
            android:id="@+id/text_appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="40sp"
            android:textColor="@color/textColor"
            android:fontFamily="@font/mali_regular"
            android:layout_gravity="center_horizontal"/>

       <!-- FRAGMENT PLACEHOLDER FOR SIGN UP STEPS -->
        <FrameLayout
            android:id="@+id/fragment_placeholder_sign_up_as_local_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" />

    </LinearLayout>

</ScrollView>