<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorPrimary">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:paddingTop="15dp"
        tools:context=".activity.SignUpActivity">

        <TextView
            android:id="@+id/text_appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="@string/app_name"
            android:textSize="40sp"
            android:textColor="@color/textColor"
            android:fontFamily="@font/mali_regular"/>

        <EditText
            android:id="@+id/edit_text_email_sign_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/text_appName"
            android:hint="@string/login_email_address"
            android:inputType="textEmailAddress"
            android:textColor="@color/textColor"
            android:layout_marginTop="10dp"
            tools:ignore="Autofill" />

        <EditText
            android:id="@+id/edit_text_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/edit_text_email_sign_up"
            android:textColor="@color/textColor"
            android:hint="@string/sign_up_first_name"
            android:inputType="textCapSentences"
            android:layout_marginTop="10dp"
            tools:ignore="Autofill" />

        <EditText
            android:id="@+id/edit_text_surname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/edit_text_first_name"
            android:textColor="@color/textColor"
            android:inputType="textCapSentences"
            android:hint="@string/sign_up_surname"
            android:layout_marginTop="10dp"
            tools:ignore="Autofill" />

        <EditText
            android:id="@+id/edit_text_home_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapSentences"
            android:textColor="@color/textColor"
            app:layout_constraintTop_toBottomOf="@id/edit_text_surname"
            android:hint="@string/sign_up_home_country"
            android:layout_marginTop="10dp"
            tools:ignore="Autofill" />

        <EditText
            android:id="@+id/edit_text_home_town"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/edit_text_home_country"
            android:inputType="textCapSentences"
            android:textColor="@color/textColor"
            android:hint="@string/sign_up_home_town"
            android:layout_marginTop="10dp"
            tools:ignore="Autofill" />

        <EditText
            android:id="@+id/edit_text_password_sign_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/edit_text_home_town"
            android:layout_marginTop="10dp"
            android:textColor="@color/textColor"
            android:hint="@string/login_password"
            android:inputType="textPassword"
            tools:ignore="Autofill" />

        <EditText
            android:id="@+id/edit_text_password_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/edit_text_password_sign_up"
            android:layout_marginTop="10dp"
            android:hint="@string/sign_up_confirm_password"
            android:inputType="textPassword"
            tools:ignore="Autofill" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/edit_text_password_confirm"
            android:layout_marginTop="10dp"
            android:text="@string/sign_up"
            android:textColor="@color/textColor"
            android:background="@drawable/button"
            android:fontFamily="@font/nunito_bold"
            android:onClick="onSignUp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>