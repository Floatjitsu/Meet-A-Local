<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="12dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_navigation_header_profile_picture"
        android:layout_width="55dp"
        android:layout_height="55dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/image_earth"/>

    <TextView
        android:id="@+id/text_navigation_header_names"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/image_navigation_header_profile_picture"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:textColor="@color/textColor"
        android:text="@string/navigation_drawer_header_names"/>

    <TextView
        android:id="@+id/text_navigation_header_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text_navigation_header_names"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/textColor"
        android:text="@string/navigation_drawer_header_email"/>

</androidx.constraintlayout.widget.ConstraintLayout>